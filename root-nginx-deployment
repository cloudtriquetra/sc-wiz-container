apiVersion: apps/v1
kind: Deployment
metadata:
  name: root-nginx-deployment
spec:
  selector:
    matchLabels:
      app: rootnginx
  replicas: 1
  template:
    metadata:
      labels:
        app: rootnginx
    spec:
      containers:
      - name: rootnginx
        image: nginx:1.14.2
        ports:
        - containerPort: 80
        securityContext:
          runAsUser: 0
